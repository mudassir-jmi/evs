<%- include('../../partials/header') %> 
    <script
      src="https://kit.fontawesome.com/64d58efce2.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/css/logina.css" />
    <title>Mahi Voting System | login</title>
  </head>
  <body>
    <div class="container <% if (isSignupMode) { %>sign-up-mode<% } %>">
      <div class="forms-container">
        <div class="signin-signup">
          
          <form action="/ologin" method="post" class="sign-in-form" novalidate> 
            <% if(errorMsg && (!isSignupMode)) {%> 
              <div class="user-message user-message-error"><%= errorMsg %></div>
          <% } %> 
            
            <h2 class="title">Sign in <i class="fas fa-sign-in-alt"></i></h2>
            <div class="input-field">
              <i class="fas fa-user"></i>
              <input type="email" name="email" placeholder="email" value="<%=oldInput.email%>" />
            </div>
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input type="password" name="password" placeholder="Password" value="<%=oldInput.password%>" />
            </div>
            <input type="hidden" name="_csrf" value="<%=csrfToken%>">
            <input type="submit" value="Login" class="btn solid" />
            <a href="/oreset">Forget Password?</a>
            <p class="social-text">Or Sign in with social platforms</p>
            <div class="social-media">
              <a href="#" class="social-icon">
                <i class="fab fa-google"></i>
              </a>
            </div>
            
          </form>
       
          <form action="/osignup" method="post" class="sign-up-form">
            <% if(errorMsg && (isSignupMode)) {%> 
              <div class="user-message user-message-error"><%= errorMsg %></div>
          <% } %> 
         
            <h2 class="title">Sign up  <i class="fas fa-user-plus"></i></h2>
            <div class="input-field">
              <i class="far fa-address-book"></i>
              <input type="text" name="aname" placeholder="Full Name"value="<%=oldInput.aname%>" />
            </div>
            <div class="input-field">
              <i class="fas fa-envelope"></i>
              <input type="email" name="aemail" placeholder="Email" value="<%=oldInput.aemail%>" />
            </div>
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input type="password" name="apassword" placeholder="Password" value="<%=oldInput.apassword%>"/>
            </div>
            <div class="input-field">
                <i class="fas fa-lock"></i>
                <input type="password" name="cpassword" placeholder="Confirm Password" value="<%=oldInput.cpassword%>" />
              </div>
              <input type="hidden" name="_csrf" value="<%=csrfToken%>">
            <input type="submit" class="btn" value="Sign up" />
            <p class="social-text">Or Sign up with social platforms</p>
            <div class="social-media">
              <a href="#" class="social-icon">
                <i class="fab fa-google"></i>
              </a>
            </div>
          </form>
        </div>
      </div>

      <div class="panels-container">
        <div class="panel left-panel">
          <div class="content">
            <h2>Blockchain Voting System <i class="fas fa-vote-yea"></i></h2>
            
            <p class="click">
                <a href="/demo" > <i class="fas fa-hand-point-right"> click here to know how mvs work(demo) </i></a>
            </p>
            <h3>New here ?<i class="fas fa-vote-yea"></i></h3>
            <p>Click sigup. To create your own account.</p>
            <!-- <h2>clic</h2> -->
            <button class="btn transparent" id="sign-up-btn">
              Sign up
            </button>
          </div>
          <img src="img/voter.svg" class="image" alt="" />
        </div>
        <div class="panel right-panel">
          <div class="content">
            <h2>Blockchain Voting System <i class="fas fa-vote-yea"></i></h2>   
            <p class="click">
                <a href="/demo" > <i class="fas fa-hand-point-right"> click here to know how mvs work(demo) </i></a>
            </p>
            <h3>One of us ?</h3>
            <p>
              The most secure technology we've  ever came across is blockchain!
              wanna know more about how we use it. Please visit demo
            </p>
            <button class="btn transparent" id="sign-in-btn">
              Sign in
            </button>
          </div>
          <img src="img/register.svg" class="image" alt="" />
        </div>
      </div>
    </div>

    <script src="/js/login.js"></script>
  </body>
</html>
